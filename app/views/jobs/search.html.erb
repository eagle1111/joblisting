
 <% if @jobs.blank?%>
  <div class="col-md-10 col-md-offset-1">
    <div class="search-error">
      <h2>查无此项！</h2><br>
      <p><%= link_to("立即查看工作", jobs_path, class: "btn btn-default") %></p>
    </div>
  </div>
  <% else %>
  <div class="col-md-10 col-md-offset-1">

  <% @jobs.each do |job| %>
  <div class="col-md-9 job-box">
  <h3><%= link_to(job.title, job_path(job), target: "_blank" )%></h3>
  <p>发表时间：<%= job.created_at.strftime("%Y-%m-%d") %></p>
  <p>工资：<%= job.wage_lower_bound %>  ~ <%= job.wage_upper_bound %> </p>
  </div>
  <% end %>
</div>
  <div class="col-md-10 col-md-offset-1 job-bottom">
    <div class="text-center">
      <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
  <% end %>
