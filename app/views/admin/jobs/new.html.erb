
<div class="col-md-8">


<div class="panel panel-info">
  <div class="panel-heading"><h1>Add a job</h1></div>
  <div class="panel-body">
  <%= simple_form_for [:admin,@job] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :wage_lower_bound, :label=>"薪资下限" %>
  <%= f.input :wage_upper_bound, :label=>"薪资上限" %>
  <%= f.input :contact_email %>
   <div class="group">
		 <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
 </div>
  <%= f.input :is_hidden %>
  <%= f.submit "Submit", class: "btn btn-danger" %>
  <% end %>
  </div>
</div>
</div>
