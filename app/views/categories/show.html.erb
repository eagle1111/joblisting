

  <div class="col-md-6 col-centered">


  <div class="panel panel-info">
    <div class="panel-heading"><h1 class="text-center">Category</h1></div>
    <div class="panel-body">
      <p>
        <% Job.where(category_id: @category.id).each do |job| %>
        	  <%= job.title %>
      	<% end %>
      	<p id="notice"><%= notice %></p>

      	<p>
        	  <strong>Name:</strong>
          	<%= @category.name %>
          </p>
      	 <p>
      	    <strong>Desc:</strong>
        	  <%= @category.desc %>
      	</p>

      	<%= link_to 'Edit', edit_category_path(@category), class: "btn btn-danger" %>
       |
      	<%= link_to 'Back', categories_path %>
      </p>
    </div>
  </div>
  </div>
